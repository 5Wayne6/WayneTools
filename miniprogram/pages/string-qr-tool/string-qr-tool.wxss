.input-text {
  margin: 70rpx auto 0 auto;
  width: 600rpx;
  height: 88rpx;
  border: 2rpx solid #8f8f8f;
  border-radius: 16rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  background-color: #f0f0f0;
}

.input-wrapper input {
  font-size: 32rpx;
  line-height: 88rpx;
  height: 100%;
}

.button-wrapper {
  margin-top: 60rpx;
}

.button-wrapper .button{
  color: #ffffff;
  background-color: #78aaca;
}

.canvas {
  margin: 80rpx auto;
}

.save-button {
  color: #ffffff;
  background-color: #78aaca;
  text-align: center;
  margin: 20rpx auto;
}

.back-button{
  color: #ffffff;
  background-color: #78aaca;
  text-align: center;
  margin: 20rpx auto;
}

